<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300px"
    app:cardCornerRadius="20px">
    <LinearLayout
        android:id="@+id/rlChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10px">
            <ImageView
                android:id="@+id/ivMapIcon"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="5px"
                android:layout_height="wrap_content"
                android:src="@drawable/map_icon">
            </ImageView>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_alignLeft="@id/ivMapIcon"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="30px"></TextView>
            <ImageView
                android:id="@+id/ivPhoneCall"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="5px"
                android:layout_height="wrap_content"
                android:src="@drawable/telephone">
            </ImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10px">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:src="@drawable/alarm_icon">
                </ImageView>
                <TextClock
                    android:id="@+id/tvTextClock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:format12Hour="hh:mm:ss a"
                    android:textColor="@android:color/white"
                    tools:targetApi="jelly_bean_mr1">
                </TextClock>
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:visibility="gone"
                    android:textColor="@android:color/white">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnDelivered"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:textSize="20px"
                        android:text="Delivered">
                    </Button>
                    <Button
                        android:id="@+id/btnNotDelivered"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:textSize="20px"
                        android:text="Not Delivered">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnPickImage"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:textSize="20px"
                        android:text="Photo">
                    </Button>
                    <Button
                        android:id="@+id/btnRecordAudio"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:textSize="20px"
                        android:text="Audio">
                    </Button>
                    <Button
                        android:id="@+id/btnRecordVideo"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:textSize="20px"
                        android:layout_height="match_parent"
                        android:text="Video">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>